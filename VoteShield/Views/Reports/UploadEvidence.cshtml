@{
    ViewData["Title"] = "Upload Evidence";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-cloud-upload-alt me-2"></i>Upload Evidence
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="UploadEvidence" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="reportId" value="@ViewBag.ReportId" />

                        <div class="mb-4">
                            <label class="form-label fw-bold">Select Evidence Files</label>
                            <input type="file" name="files" multiple class="form-control"
                                   accept=".jpg,.jpeg,.png,.pdf,.mp4,.avi,.mov" />
                            <div class="form-text">
                                Supported formats: JPG, PNG, PDF, MP4, AVI, MOV (Max 10MB each)
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Document Type</label>
                            <select name="documentType" class="form-select">
                                <option value="@DocumentTypes.Evidence_Photo">Evidence Photo</option>
                                <option value="@DocumentTypes.Evidence_Video">Evidence Video</option>
                                <option value="@DocumentTypes.Supporting_Document">Supporting Document</option>
                                <option value="@DocumentTypes.ID_Card">ID Card</option>
                            </select>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="fas fa-robot me-2"></i>AI Verification</h6>
                            <p class="mb-0">All uploaded documents will be automatically verified by our AI system for authenticity and analyzed for potential evidence.</p>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-upload me-2"></i>Upload & Verify
                            </button>
                            <a href="@Url.Action("Details", new { id = ViewBag.ReportId })" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>